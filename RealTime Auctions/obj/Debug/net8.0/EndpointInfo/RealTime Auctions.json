{
  "openapi": "3.0.1",
  "info": {
    "title": "RealTime Auctions",
    "version": "1.0"
  },
  "paths": {
    "/api/auctions": {
      "post": {
        "tags": [
          "Auctions"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Auction"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/Auction"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/Auction"
              }
            }
